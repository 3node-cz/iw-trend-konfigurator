# Shopify App Configuration
SHOPIFY_API_KEY=your_api_key_here
SHOPIFY_API_SECRET=your_api_secret_here
SCOPES=write_products,read_products,write_orders,read_orders,write_customers,read_customers,write_draft_orders,read_draft_orders

# Storefront API Token (for server-side cart creation)
SHOPIFY_STOREFRONT_ACCESS_TOKEN=your_storefront_access_token_here

# Database
DATABASE_URL="file:./dev.sqlite"

# App URL (automatically set by Shopify CLI in development)
SHOPIFY_APP_URL=https://your-app-url.com

# Session encryption key (generate with: node -e "console.log(crypto.randomBytes(32).toString('base64'))")
SHOPIFY_APP_SESSION_SECRET=your_session_secret_here